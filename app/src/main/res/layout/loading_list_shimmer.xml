<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#80ECECEC"
    android:padding="9dp"
    android:layout_margin="12dp">

    <View
        android:id="@+id/list_shimmer_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="3dp"
        android:background="#E3E3E3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/list_shimmer_text1"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        android:background="#E3E3E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/list_shimmer_icon"
        app:layout_constraintTop_toTopOf="@id/list_shimmer_icon" />

    <View
        android:id="@+id/list_shimmer_text2"
        android:layout_width="90dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        android:background="#E3E3E3"
        app:layout_constraintBottom_toBottomOf="@id/list_shimmer_icon"
        app:layout_constraintStart_toEndOf="@id/list_shimmer_icon"
        app:layout_constraintTop_toBottomOf="@id/list_shimmer_text1" />

</androidx.constraintlayout.widget.ConstraintLayout>