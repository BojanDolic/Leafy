<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/farm_image_port"
    android:fitsSystemWindows="true">


    <ImageView
        android:id="@+id/leafy_banner_img"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/leafy_banner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/leafy_banner_img"
        app:layout_constraintBottom_toTopOf="@id/registerBtn"
        android:text="@string/prijavi_se_text"
        android:textSize="16sp"
        android:fontFamily="@font/nunito_extrabold"
        app:layout_constraintVertical_chainStyle="packed"
        app:cornerRadius="9dp"
        android:layout_margin="24dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/registerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/registruj_se_text"
        android:textSize="16sp"
        android:fontFamily="@font/nunito_extrabold"
        app:cornerRadius="9dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>