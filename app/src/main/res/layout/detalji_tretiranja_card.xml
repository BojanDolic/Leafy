<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:translationZ="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="8dp"
    app:contentPadding="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tretiranje_bolest_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_bold"
            android:maxLines="1"
            android:text="Disease title"
            android:textColor="@color/darkTextColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tretiranje_kolicina_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#1A1B70F7"
            app:cardElevation="0dp"
            app:contentPadding="9dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tretiranje_bolest_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/tretiranje_kolicina_icon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/kolicina_icon"
                    app:tint="@color/blue"
                    app:layout_constraintTop_toTopOf="@id/tretiranje_kolicina_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tretiranje_kolicina_title"/>

                <TextView
                    android:id="@+id/tretiranje_kolicina_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:maxLines="1"
                    android:text="Količina primjene"
                    android:textColor="@color/darkTextColor"
                    android:textSize="16sp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toEndOf="@id/tretiranje_kolicina_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tretiranje_kolicina_desc"/>

                <TextView
                    android:id="@+id/tretiranje_kolicina_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum details ...."
                    app:layout_constraintTop_toBottomOf="@id/tretiranje_kolicina_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/opensans_light"
                    android:textSize="16sp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tretiranje_vrijeme_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#1A008350"
            app:cardElevation="0dp"
            app:contentPadding="9dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tretiranje_kolicina_container">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/tretiranje_vrijeme_icon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/time_icon"
                    app:tint="@color/darkGreen"
                    app:layout_constraintTop_toTopOf="@id/tretiranje_vrijeme_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tretiranje_vrijeme_title"/>

                <TextView
                    android:id="@+id/tretiranje_vrijeme_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:maxLines="1"
                    android:text="Vrijeme primjene"
                    android:textColor="@color/darkTextColor"
                    android:textSize="16sp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toEndOf="@id/tretiranje_vrijeme_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tretiranje_vrijeme_desc"/>


                <TextView
                    android:id="@+id/tretiranje_vrijeme_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum details ...."
                    app:layout_constraintTop_toBottomOf="@id/tretiranje_vrijeme_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/opensans_light"
                    android:textSize="16sp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tretiranje_brojprimjene_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#1ABF3630"
            app:cardElevation="0dp"
            app:contentPadding="9dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tretiranje_vrijeme_container">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/tretiranje_brojprimjene_icon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/promjena_icon"
                    app:tint="@color/mainColor"
                    app:layout_constraintTop_toTopOf="@id/tretiranje_brojprimjene_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tretiranje_brojprimjene_title"/>

                <TextView
                    android:id="@+id/tretiranje_brojprimjene_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:maxLines="1"
                    android:text="Broj primjena"
                    android:textColor="@color/darkTextColor"
                    android:textSize="16sp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toEndOf="@id/tretiranje_brojprimjene_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tretiranje_brojprimjene_desc"/>


                <TextView
                    android:id="@+id/tretiranje_brojprimjene_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum details ...."
                    app:layout_constraintTop_toBottomOf="@id/tretiranje_brojprimjene_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/opensans_light"
                    android:textSize="16sp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>