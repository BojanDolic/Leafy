<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:contentPadding="9dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/primjena_title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/primjena_info_container">

            <TextView
                android:id="@+id/primjena_biljka_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="Naslov"
                android:textColor="@color/darkTextColor"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/primjena_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/primjena_title_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/primjena_kolicina_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/kolicina_icon"
                app:layout_constraintBottom_toBottomOf="@id/primjena_kolicina_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/primjena_kolicina_title"
                app:tint="@color/blue" />


            <TextView
                android:id="@+id/primjena_kolicina_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/kolicina_primjene_text"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/primjena_kolicina_icon"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/primjena_kolicina_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/opensans_light"
                android:text=""
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/primjena_kolicina_title" />


            <ImageView
                android:id="@+id/primjena_vrijeme_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/time_icon"
                app:layout_constraintBottom_toBottomOf="@id/primjena_vrijeme_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/primjena_vrijeme_title"
                app:tint="@color/mainColor" />


            <TextView
                android:id="@+id/primjena_vrijeme_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/vrijeme_primjene_text"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/primjena_kolicina_icon"
                app:layout_constraintTop_toBottomOf="@id/primjena_kolicina_text" />


            <TextView
                android:id="@+id/primjena_vrijeme_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/opensans_light"
                android:text=""
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/primjena_vrijeme_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>