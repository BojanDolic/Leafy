<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/bolest_card_image_container"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/bolest_card_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/bolest_card_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kukuruzna rđa"
            android:textSize="20sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/opensans_bold"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/darkTextColor"
            app:layout_constraintStart_toEndOf="@id/bolest_card_image_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/bolest_card_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kukuruzna rđa"
            android:textSize="16sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:fontFamily="@font/opensans_light"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:textColor="@color/darkTextColor"
            app:layout_constraintStart_toEndOf="@id/bolest_card_image_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bolest_card_title"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>